    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\main.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to process",
            "address": "127.0.0.1",
            "port": 5858
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha (Unit test)",
            "program": "${workspaceFolder}\\node_modules\\mocha\\bin\\_mocha",
            "args": [
                "test/unit",
                "--exit"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}